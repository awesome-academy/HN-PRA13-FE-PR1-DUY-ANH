              +orderRow(2, 'DH001', '2023-08-03', 'Kho A', 5, '$250.00', 'Đã thanh toán')
              +orderRow(1, 'DH001', '2023-08-03', 'Kho A', 5, '$250.00', 'Đã thanh toán')
              +orderRow(2, 'DH001', '2023-08-03', 'Kho A', 5, '$250.00', 'Đã thanh toán')
              +orderRow(1, 'DH001', '2023-08-03', 'Kho A', 5, '$250.00', 'Đã thanh toán')
              +orderRow(2, 'DH001', '2023-08-03', 'Kho A', 5, '$250.00', 'Đã thanh toán')
      .col-md-3
        .customer-info
          h4.customer-info__title Thông tin khách hàng
          p.customer-info__detail
            i.fas.fa-user
            strong Giang Lê
          p.customer-info__detail Giangle@gmail.com
          p.customer-info__detail
            i.fas.fa-building
              |  Tòa nhà ABC Hà Đông Hà Nội
          p.customer-info__detail
